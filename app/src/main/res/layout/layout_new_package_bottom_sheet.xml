<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_bg_buttom_sheet"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <View
        android:layout_width="76dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_bottom_sheet_drag_handler" />

    <com.app.friendschat.utils.custom_view.MovableText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_424242"
        android:textSize="@dimen/_13sdp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/new_package"
        android:layout_marginVertical="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/edt_package_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/bg_text_input_new_package"
        android:hint="@string/example_emoji_1"
        android:paddingHorizontal="@dimen/_14sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/color_667085"
        android:fontFamily="@font/urbanist_regular"
        android:textSize="@dimen/_13ssp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_17sdp">

        <RelativeLayout
            android:id="@+id/rl_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/border_circle_white_background">

            <com.app.friendschat.utils.custom_view.MovableText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cancel"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/color_0C111D"
                android:fontFamily="@font/urbanist_semi_bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1"
            android:background="@drawable/border_select_language"
            android:layout_marginStart="@dimen/_17sdp">

            <com.app.friendschat.utils.custom_view.MovableText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/urbanist_semi_bold"
                android:text="@string/add"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>