<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_adding_to_whatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:background="@drawable/bg_adding_to_whatsapp_button"
        android:gravity="center">
        
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_phone"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/_7sdp"/>

        <com.app.friendschat.utils.custom_view.MovableText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/urbanist_semi_bold"
            android:text="@string/add_to_whatsapp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_adding_to_telegram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_13sdp"
        android:background="@drawable/bg_adding_to_telegram_button"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_telegram"
            android:adjustViewBounds="true"
            android:layout_marginEnd="@dimen/_7sdp"/>

        <com.app.friendschat.utils.custom_view.MovableText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/urbanist_semi_bold"
            android:text="@string/add_to_telegram"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_13sdp">

        <LinearLayout
            android:id="@+id/ll_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_share_or_download_button"
            android:padding="@dimen/_10sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17ssp"
                android:src="@drawable/ic_share"/>

            <com.app.friendschat.utils.custom_view.MovableText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/urbanist_semi_bold"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/color_0C111D"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/border_share_or_download_button"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_13sdp"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17ssp"
                android:src="@drawable/ic_download"/>

            <com.app.friendschat.utils.custom_view.MovableText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/download"
                android:layout_marginStart="@dimen/_7sdp"
                android:fontFamily="@font/urbanist_semi_bold"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/color_0C111D"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>