<?xml version="1.0" encoding="utf-8"?>

                                                        
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg_suggestion"
        android:padding="@dimen/_13sdp"
        android:layout_marginBottom="@dimen/_13sdp" android:tag="layout/layout_suggestion_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:id="@+id/rl_icon"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/pb_icon"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_centerInParent="true"
                android:indeterminate="true"
                android:indeterminateTint="@color/color_BCBCBC" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_semi_bold"
            android:text="Happy Christmas"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/color_1D2939"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintLeft_toRightOf="@id/rl_icon"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_number_of_sticker"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_13sdp"
            android:src="@drawable/ic_number_of_sticker"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            app:layout_constraintLeft_toRightOf="@id/rl_icon"
            app:layout_constraintTop_toBottomOf="@id/tv_title"/>

        <TextView
            android:id="@+id/tv_number_of_sticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_medium"
            android:text="16 stickers"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/color_737373"
            android:layout_marginStart="@dimen/_3sdp"
            app:layout_constraintLeft_toRightOf="@id/iv_number_of_sticker"
            app:layout_constraintTop_toTopOf="@id/iv_number_of_sticker"
            app:layout_constraintBottom_toBottomOf="@id/iv_number_of_sticker"/>

        <ImageView
            android:id="@+id/iv_dots"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/ic_dots"
            android:layout_marginEnd="@dimen/_5sdp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/rl_icon"
            app:layout_constraintBottom_toBottomOf="@id/rl_icon"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/rl_icon"
            android:orientation="horizontal">

            <com.app.friendschat.utils.custom_view.SquareFrame
                android:id="@+id/sf_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_image_suggestion_item">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_13sdp"
                    app:cardElevation="0dp"
                    style="@style/SuggestionItemCardView">

                    <ImageView
                        android:id="@+id/iv_image_1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

                <ProgressBar
                    android:id="@+id/pb_1"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/color_BCBCBC" />

            </com.app.friendschat.utils.custom_view.SquareFrame>

            <com.app.friendschat.utils.custom_view.SquareFrame
                android:id="@+id/sf_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_13sdp"
                android:layout_weight="1"
                android:background="@drawable/bg_image_suggestion_item">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_13sdp"
                    app:cardElevation="0dp"
                    style="@style/SuggestionItemCardView">

                    <ImageView
                        android:id="@+id/iv_image_2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

                <ProgressBar
                    android:id="@+id/pb_2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/color_BCBCBC"/>

            </com.app.friendschat.utils.custom_view.SquareFrame>

            <com.app.friendschat.utils.custom_view.SquareFrame
                android:id="@+id/sf_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_image_suggestion_item">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="@dimen/_13sdp"
                    app:cardElevation="0dp"
                    style="@style/SuggestionItemCardView">

                    <ImageView
                        android:id="@+id/iv_image_3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </com.google.android.material.card.MaterialCardView>

                <ProgressBar
                    android:id="@+id/pb_3"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/color_BCBCBC"/>

            </com.app.friendschat.utils.custom_view.SquareFrame>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
         