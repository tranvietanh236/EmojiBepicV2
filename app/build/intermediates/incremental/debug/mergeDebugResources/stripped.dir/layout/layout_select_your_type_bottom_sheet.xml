<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_bg_buttom_sheet"
    android:orientation="vertical"
    android:paddingHorizontal="16dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_bottom_sheet_drag_handler" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/Select_Your_Type"
        android:textColor="@color/color_344054"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/urbanist_regular"
        android:text="@string/Please_indicate_whether"
        android:textColor="@color/color_667085"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_emoji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/border_bg_type_bottom_sheet"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="61dp"
                android:src="@drawable/photo_type_emoji" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/Emoji_Maker"
                android:textColor="@color/color_0C111D"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/urbanist_medium"
                android:text="@string/Create_Emoji"
                android:textColor="@color/color_344054"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_sticker"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/border_bg_type_bottom_sheet"
            android:orientation="vertical"
            android:visibility="invisible"
            android:padding="16dp">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="61dp"
                android:src="@drawable/photo_type_sticker" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/urbanist_bold"
                android:text="@string/Sticker_Maker"
                android:textColor="@color/color_0C111D"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/urbanist_medium"
                android:text="@string/Create_Sticker"
                android:textColor="@color/color_344054"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>