<?xml version="1.0" encoding="utf-8"?>
        

    

                 
                            
                                                                       
           

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:background="@drawable/bg_main"
        android:paddingHorizontal="@dimen/_13sdp"
        android:orientation="vertical"
        android:gravity="center_horizontal" android:tag="layout/fragment_settings_bepic_0">

        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/color_1F1F29"
            android:fontFamily="@font/urbanist_extra_bold"
            android:textSize="24sp"
            android:layout_height="wrap_content"
            android:text="@string/setting"/>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_13sdp"
            android:background="@drawable/border_bg_setting_options">

            <LinearLayout
                android:id="@+id/ll_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_globe"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/languages"
                    android:textColor="@color/color_1F1F29"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/urbanist_semi_bold"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_star"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/rate"
                    android:textColor="@color/color_1F1F29"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/urbanist_semi_bold"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_20sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_share"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/share"
                    android:textColor="@color/color_1F1F29"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/urbanist_semi_bold"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_privacy_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_lock"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/privacy_policy"
                    android:textColor="@color/color_1F1F29"
                    android:textSize="@dimen/_13ssp"
                    android:fontFamily="@font/urbanist_semi_bold"
                    android:layout_marginHorizontal="@dimen/_10sdp"/>

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:text="@string/app_name"
                android:textColor="@color/color_095467"
                android:fontFamily="@font/tt_hoves_pro_trial_bold"/>

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0.0"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/color_737373"
                android:layout_marginTop="@dimen/_3sdp"/>

        </LinearLayout>

    </LinearLayout>
         